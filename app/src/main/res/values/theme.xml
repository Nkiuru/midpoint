<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InitialTheme" parent="Theme.MaterialComponents">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Light Mode -->
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <item name="android:textViewStyle">@font/pt_sans</item>
        <item name="buttonColor">@color/button_states_light</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="bottomSheetBackgroundColor">@color/color_white</item>
        <item name="bottomMenuBackgroundColor">@color/color_primary</item>
        <item name="textColor">@color/color_dark</item>
        <item name="bgColor">@color/color_white</item>
        <item name="buttonTextColor">@color/color_white</item>
        <item name="entryFooter">@color/color_white_accent</item>
        <item name="editTextColor">@color/text_field_color_light</item>
        <item name="imageButtonStyle">@color/color_dark_grey</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="surfaceArea">@color/color_primary</item>
        <item name="textOnColorSurface">@color/color_white</item>
        <item name="searchViewBgColor">@color/color_white</item>
        <item name="listIconButtonColor">@color/color_dark_grey</item>
        <item name="friendSearchResultsBgColor">@color/color_white_accent</item>
        <item name="meetingDialogBgColor">@color/color_white</item>
        <item name="qrScannedButtonColor">@color/color_dark</item>
        <item name="meetingRowRippleColor">@color/color_white_accent</item>
        <item name="meetingRowBgColor">@color/color_white</item>
        <item name="meetingRowDividerColor">@color/color_white_accent</item>
        <item name="menuIconUnchecked">@color/color_primary_dark</item>
        <item name="altBgColor">@color/color_primary</item>
        <item name="qrIconBtnColor">@color/color_dark</item>

    </style>

    <!-- Dark Mode -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textViewStyle">@font/pt_sans</item>
        <item name="android:textColor">@color/color_white_accent</item>
        <item name="buttonColor">@color/button_states_dark</item>
        <item name="test">@color/color_warning</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="editTextColor">@color/text_field_color_dark</item>
        <item name="imageButtonStyle">@color/color_light_grey</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="meetingDialogBgColor">@color/midnight</item>



        <!-- ok -->
        <item name="buttonTextColor">@color/color_white</item>
        <item name="entryFooter">@color/midnight</item>
        <item name="textColor">@color/color_white</item>
        <item name="bgColor">@color/twilight</item>
        <item name="bottomSheetBackgroundColor">@color/twilight</item>
        <item name="bottomMenuBackgroundColor">@color/midnight</item>
        <item name="surfaceArea">@color/midnight</item>
        <item name="textOnColorSurface">@color/color_primary</item>
        <item name="searchViewBgColor">@color/color_primary_dark</item>
        <item name="listIconButtonColor">@color/color_dark_grey</item>
        <item name="friendSearchResultsBgColor">@color/twilight</item>
        <item name="qrScannedButtonColor">@color/orange</item>
        <item name="meetingRowRippleColor">@color/midnight</item>
        <item name="meetingRowBgColor">@color/twilight</item>
        <item name="meetingRowDividerColor">@color/midnight</item>
        <item name="menuIconUnchecked">@color/color_dark_grey</item>
        <item name="altBgColor">@color/twilight</item>
        <item name="qrIconBtnColor">@color/color_white</item>

    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
</resources>