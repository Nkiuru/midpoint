<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textViewStyle">@font/pt_sans</item>
        <item name="android:textColor">@color/color_dark</item>
        <item name="buttonStyle">@font/pt_sans</item>
    </style>

    <style name="MidpointFullscreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    // Square icon button
    <style name="ButtonSquareIcon" parent="AppTheme">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/color_accent</item>
    </style>

    // Primary Button
    <style name="ButtonPrimary" parent="AppTheme">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>

    // Input Layout
    <style name="InputLayout" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    // Input EditText
    <style name="InputEditText" parent="AppTheme">
        <item name="android:paddingBottom">24dp</item>
    </style>

</resources>
