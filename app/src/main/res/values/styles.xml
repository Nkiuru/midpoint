<resources>

    <style name="MidpointFullscreen" parent="InitialTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Primary Button -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/buttonColor</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Image Button -->
    <style name="ButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:background">@color/trans</item>
        <item name="android:tint">?attr/imageButtonStyle</item>
    </style>


    <!-- Round Image Button -->
    <style name="RoundImageButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Status Icon -->
    <style name="StatusIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_dialog</item>
    </style>


    <!-- Input Edit Text -->
    <style name="InputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/textColor</item>
        <item name="hintTextColor">?attr/textColor</item>
        <item name="boxStrokeColor">?attr/editTextColor</item>
    </style>

    <!-- BottomSheet -->
    <style name="RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottomsheet</item>
    </style>
    <style name="CustomShapeAppearanceOverlay.MaterialComponents.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- The: background color for Action Bar overflow menu -->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">?attr/bgColor</item>
        <item name="android:popupElevation">8dp</item>
        <item name="android:actionMenuTextColor">@color/color_dark</item>
    </style>

</resources>
