    // Primary Button
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/buttonColor</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    // Image Button
    <style name="ButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:background">@color/trans</item>
    </style>

    <!-- Status Icon -->
    <style name="StatusIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:cropToPadding">true</item>
    </style>



    // Input EditText
    <style name="InputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="Perkele" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/bottomMenuBackgroundColor</item>
    </style>


    <!-- BottomSheet -->
    <style name="RoundedBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceOverlay.MaterialComponents.BottomSheet</item>
        <item name="android:backgroundTint">?attr/bottomSheetBackgroundColor</item>
    </style>
    <style name="CustomShapeAppearanceOverlay.MaterialComponents.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
