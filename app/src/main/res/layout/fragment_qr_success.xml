<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="128dp"
    android:backgroundTint="@color/orange"
    android:background="@color/color_white_accent">

    <LinearLayout
        android:id="@+id/qr_scanned_friend_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qr_friends_with"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/friends_list_row_avatar"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_avatar_ph"/>

        <TextView
            android:id="@+id/qr_requester_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/color_white"/>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/qr_scanned_btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/color_dark"
        android:layout_below="@+id/qr_scanned_friend_container"
        android:layout_centerHorizontal="true"
        android:text="@string/qr_continue"
        />

    <LinearLayout
        android:id="@+id/qr_outcome_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />



</RelativeLayout>