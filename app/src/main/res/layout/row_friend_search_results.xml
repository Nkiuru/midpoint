<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/friends_search_list_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/avatar_content_description"
            android:src="@drawable/ic_avatar_ph"/>

        <TextView
            android:id="@+id/friends_search_list_username"
            android:layout_toEndOf="@id/friends_search_list_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="?attr/textColor"
            android:textSize="16sp"
            android:text="@string/hint_username"/>

    <ImageButton
        style="@style/ButtonImage"
        android:id="@+id/friends_button_send_friend_request"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/send_friend_request"
        android:src="@drawable/ic_add"
        android:tint="?attr/imageButtonStyle"/>

    <ImageView
        style="@style/StatusIcon"
        android:id="@+id/friends_req_status"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/friend_request_status"
        android:src="@drawable/ic_pending"
        android:visibility="gone"/>
</RelativeLayout>