<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_friends_item_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingStart="16dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/friends_list_row_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/avatar_content_description"
        android:src="@drawable/ic_avatar_ph"/>

    <TextView
        android:id="@+id/friends_list_row_username"
        android:layout_toEndOf="@id/friends_list_row_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="?attr/textColor"
        android:textSize="16sp"
        android:text="Username"/>

    <ImageButton
        android:id="@+id/friends_list_row_action"
        style="@style/ButtonImage"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_more_vertical"
        android:contentDescription="@string/more_actions_description"
        android:tint="@color/color_dark_grey"
        android:textAppearance="?android:textAppearanceLarge"/>

</RelativeLayout>